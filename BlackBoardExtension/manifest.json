{
    "manifest_version" : 2,
    "name": "BlackBoard Extension",
    "version": "1.0.0",
    "content_scripts" :[{
        "matches"  : [
            "<all_urls>"
        ],
        "js" : ["content.js"]
    }],
    "background" : {
        "scripts" : ["background.js"]
    },
    "permissions" : ["tabs"],
    "browser_action" : {
        "default_icon" : "play.png"
    }
}